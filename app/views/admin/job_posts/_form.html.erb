<%= form_for [:admin,@job_post] do |f| %>
  <% if @job_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job_post.errors.count, "error") %> prohibited this job post from being saved:</h2>

      <ul>
      <% @job_post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company%><br>
    <%= f.collection_select :company_id,Company.all,:id, :company_name, :include_blank=> 'Select One',:style=>"width:98%; width: 255px;",required: true %>
  </div>
  <div class="field">
    <%= f.label :status%><br>
    <%= f.select :status,[["Open", "1"],["Closed","2"]], :include_blank=> 'Select One',:style=>"width:98%; width: 255px;",required: true %>
  </div>
  <%= f.hidden_field :job_id, :value => @job.id%>
  <p>
    <strong>Job Name:</strong>
    <%= @job.job_name rescue nil %>
  </p>

  <p>
    <strong>Job Description:</strong>
    <%= @job.description rescue nil %>
  </p>

  <p>
    <strong>Job Responsibilities:</strong>
    <%= @job.description rescue nil %>
  </p>

  <p>
    <strong>Job Requirements:</strong>
    <%= @job.description rescue nil %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= @job.salary rescue nil %>
  </p>

  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>