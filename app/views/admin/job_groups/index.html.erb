<div class="faq">
  <div class="container">
    <div class="row" style="margin-top:150px;">
      <div class="span12">
       <p>
          <%= link_to 'New', new_admin_job_group_path %>
       </p>
        <h1>Job Groups</h1>

        <table width="100%" border="0" class="table table-bordered table-striped">
          <tr>
            <th>Job Group Name</th>
            <th>Action</th>
          </tr>
          <% @job_groups.each do |job_group| %>
            <tr>
              <td><%= job_group.job_model_name rescue nil %></td>
              <td><%= link_to 'Edit', edit_admin_job_group_path(job_group) %></td>
            </tr>
          <% end %>
        </table>
        <br />
      </div>
    </div>
  </div>
</div>